<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/recommond_game_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_title_img_hot_channel"/>
        <TextView
            android:id="@+id/recommond_game_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/recommond_game_iv"
            android:text="游戏杂谈"/>
        <ImageView
            android:id="@+id/recommond_game_more_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/home_title_more_btn_ic"/>
        <TextView
            android:id="@+id/recommond_game_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/recommond_game_more_iv"
            android:text="更多"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recommond_game_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
