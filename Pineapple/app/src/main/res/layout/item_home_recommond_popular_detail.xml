<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/popular_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/popular_order_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/popular_iv"
        android:text="1"/>
    <TextView
        android:id="@+id/popular_title_tv"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/popular_iv"
        android:layout_below="@+id/popular_order_tv"
        android:text="题目"/>
    <TextView
        android:id="@+id/popular_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/popular_iv"
        android:layout_below="@+id/popular_title_tv"
        android:text="人气值"/>
</RelativeLayout>
